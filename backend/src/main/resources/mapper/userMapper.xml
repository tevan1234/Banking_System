<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper SYSTEM "../dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.example.banking.model.entity.User">
        <result column="status" property="status"
                javaType="com.example.banking.model.enums.UserStatus"
                typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
    </resultMap>

    <select id="selectById" resultMap="userResultMap" parameterType="long">
        SELECT * FROM user WHERE user_id = #{id}
    </select>

</mapper>
